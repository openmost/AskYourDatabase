{% extends 'dashboard.twig' %}

    {% block content %}

        <style>
            #root {
                margin-bottom: 0;
            }

            #pageFooter {
                display: none;
            }
        </style>

        <iframe id="ask-your-database-output" src="" width="100%" height="800" style="max-height: calc(100vh - 154px)">
            Please provide credentials in the Matomo admin area
        </iframe>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                let iframe = document.getElementById('ask-your-database-output');

                ajaxHelper.fetch({
                    method: "AskYourDatabase.getIframeUrl",
                })
                .then((response) => {
                    iframe.src = response.url;
                });
            });
        </script>
    {% endblock %}
